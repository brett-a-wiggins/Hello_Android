<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tooltipText="Choose Owner"
    tools:targetApi="o">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="487dp"
        android:layout_height="285dp"
        android:contentDescription="@string/roadimagebackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="90"
        app:layout_constraintWidth_percent="90"
        app:srcCompat="@drawable/kisspng_road_royalty_free_illustration_landmarks_road_vector_5a86178550f0d3_7634598815187372853315" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="415dp"
        android:layout_height="195dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/project_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/existing_user_button"
        style="@android:style/Widget.Material.Button.Inset"
        android:layout_width="178dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="252dp"
        android:backgroundTint="#04FDA6"
        android:shadowRadius="50"
        android:soundEffectsEnabled="true"
        android:text="@string/existing_user"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textScaleX="1.2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" />

    <Button
        android:id="@+id/new_user_button"
        style="@android:style/Widget.Material.Button.Inset"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#06FDA7"
        android:shadowRadius="50"
        android:soundEffectsEnabled="true"
        android:text="@string/new_user"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textScaleX="1.2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/existing_user_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/existing_user_button"
        app:layout_constraintTop_toBottomOf="@+id/existing_user_button"
        app:layout_constraintVertical_bias="0.006" />

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/welcome_to_guzzle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="italic"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" />
</android.support.constraint.ConstraintLayout>